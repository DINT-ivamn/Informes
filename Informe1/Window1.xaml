<Window x:Class="Informe1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cr="clr-namespace:SAPBusinessObjects.WPF.Viewer;assembly=SAPBusinessObjects.WPF.Viewer"
        Title="WPF Crystal Report Viewer" Height="600" Width="800">
    <Window.Resources>
        <Style TargetType="{x:Type Image}">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </Window.Resources>
    <ScrollViewer>
    <StackPanel>
            <cr:CrystalReportsViewer Name="Informe1Viewer"/>
            <cr:CrystalReportsViewer Name="Informe2Viewer"/>
            <cr:CrystalReportsViewer Name="Informe3Viewer"/>
            <cr:CrystalReportsViewer Name="Informe4Viewer"/>
            <cr:CrystalReportsViewer Name="Informe5Viewer"/>
    </StackPanel>
    </ScrollViewer>
</Window>
